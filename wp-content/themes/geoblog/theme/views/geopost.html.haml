- global $post

.info
  %h2= the_title()

- $tab = $_GET['tab'] ? $_GET['tab'] : 'history'
.tabs
  .tab.tab_storia
    = link_to('Storia', get_permalink().'?tab=history', selected_tab('history', $tab))
  .tab.tab_oggi
    = link_to('Oggi', get_permalink().'?tab=today', selected_tab('today', $tab))
  .tab.tab_foto
    = link_to('Foto', get_permalink().'?tab=photo', selected_tab('photo', $tab))
  .tab.tab_video
    = link_to('Video', get_permalink().'?tab=video', selected_tab('video', $tab))

.content
  = render_partial('geopost/'.$tab)

